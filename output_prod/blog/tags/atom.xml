            <content type="html"><![CDATA[<div class="w-100 ph3 pv2">
    <button class="btn btn-primary">Default</button>
    <button class="btn btn-secondary">Default</button>
    <button class="btn btn-warning">Default</button>
    <button class="btn btn-success">Default</button>

    <p>Ghost button:</p>
    <button class="btn btn-primary btn-ghost">Ghost</button>
    <button class="btn btn-accent3 btn-ghost">Ghost</button>
    <button class="btn btn-info btn-ghost">Ghost</button>
