        <div class="pa2 tc w4 bg-wcag-accent3-light1"> accent3-light1   <span class="f6">#7F7BB5</span></div>
        <div class="pa2 tc w4 bg-wcag-accent3">        accent3-base     <span class="f6">#5f5aa2</span></div>
        <div class="pa2 tc w4 bg-wcag-accent3-dark1">  accent3-dark1    <span class="f6">#433F71</span></div>
        <div class="pa2 tc w4 bg-wcag-accent3-dark2">  accent3-dark2    <span class="f6">#302D51</span></div>
        <div class="pa2 tc w4 bg-wcag-accent3-dark3">  accent3-dark3    <span class="f6">#1C1B31</span></div>
        <div class="pa2 tc w4 bg-wcag-accent3-dark4">  accent3-dark4    <span class="f6">#090910</span></div>
    </div>

    <h2 class="w-100 mt1">UI colors</h2>
    <div class="flex flex-column ma1">
        <strong class="m-bs">Info</strong>
        <div class="pa2 tc w4 bg-wcag-info-light">    info-light      <span class="f6">#71acd9</span></div>
        <div class="pa2 tc w4 bg-wcag-info">           info-base        <span class="f6">#3d8ecc</span></div>
        <div class="pa2 tc w4 bg-wcag-info-dark">     info-dark       <span class="f6">#3275a7</span></div>
    </div>
    <div class="flex flex-column ma1">
        <strong class="m-bs">Success</strong>
        <div class="pa2 tc w4 bg-wcag-success-light">    success-light      <span class="f6">#3cc093</span></div>
        <div class="pa2 tc w4 bg-wcag-success">           success-base        <span class="f6">#28cc95</span></div>
        <div class="pa2 tc w4 bg-wcag-success-dark">     success-dark       <span class="f6">#0e9266</span></div>
    </div>
    <div class="flex flex-column ma1">
        <strong class="m-bs">Warning</strong>
        <div class="pa2 tc w4 bg-wcag-warning-light">    warning-light          <span class="f6">#fef394</span></div>
        <div class="pa2 tc w4 bg-wcag-warning">           warning-base          <span class="f6">#feef6d</span></div>
        <div class="pa2 tc w4 bg-wcag-warning-dark">     warning-dark           <span class="f6">#d0c45a</span></div>
    </div>
    <div class="flex flex-column ma1">
        <strong class="m-bs">Error</strong>
        <div class="pa2 tc w4 bg-wcag-error-light">    error-light          <span class="f6">#fb8987</span></div>
        <div class="pa2 tc w4 bg-wcag-error">          error-base           <span class="f6">#e55552</span></div>
        <div class="pa2 tc w4 bg-wcag-error-dark">     error-dark           <span class="f6">#b64543</span></div>
    </div>
    <div class="flex flex-column ma1">
        <strong class="m-bs">Grays</strong>
        <div class="pa2 tc w4 bg-wcag-grays-light4"> grays-white   <span class="f6">#FFFFFF</span></div>
        <div class="pa2 tc w4 bg-wcag-grays-light4"> grays-light4   <span class="f6">#F5F5F5</span></div>
